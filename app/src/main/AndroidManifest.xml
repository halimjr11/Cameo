<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".CameoApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_cameo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_cameo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Cameo"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".view.feature.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.feature.main.MainActivity"
            android:exported="false" />
    </application>

</manifest>