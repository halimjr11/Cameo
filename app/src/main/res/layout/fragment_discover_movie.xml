<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardTrending"
    style="@style/Widget.Cameo.Card"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    app:cardCornerRadius="20dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tvGreeting">

    <ImageView
        android:id="@+id/imgTrending"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_cameo_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/black_transparent_50"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            style="@style/TextAppearance.Cameo.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EVIL DEAD RISE"
            android:textAllCaps="true"
            android:textColor="@android:color/white" />

        <TextView
            style="@style/TextAppearance.Cameo.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HORROR â€¢ ENGLISH"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBook"
        style="@style/Widget.Cameo.PrimaryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:text="Book"
        app:cornerRadius="50dp" />
</com.google.android.material.card.MaterialCardView>