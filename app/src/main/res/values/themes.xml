<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Cameo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- ðŸŽ¨ Brand Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- ðŸŒš Backgrounds -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/textPrimary</item>

        <!-- ðŸ§¾ Text Colors (Custom Attrs) -->
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>

        <!-- ðŸ”˜ Buttons -->
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:colorControlHighlight">@color/colorHover</item>

        <!-- ðŸ§± Borders / Dividers -->
        <item name="android:strokeColor">@color/colorDivider</item>

        <!-- ðŸŒ System Bars -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- ðŸ”¤ Global Font -->
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="fontFamily">@font/inter_regular</item>

        <!-- Shadow overlay -->
        <item name="android:colorForeground">@color/colorShadow</item>
    </style>

    <style name="TextAppearance" />

    <style name="TextAppearance.Cameo" />

    <style name="Theme.Cameo" parent="Base.Theme.Cameo" />

    <style name="Widget.Cameo.Card">
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:elevation">6dp</item>
        <item name="android:radius">16dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Widget.Cameo.MovieImage">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="TextAppearance.Cameo.MovieTitle" parent="TextAppearance.Cameo.Headline">
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="TextAppearance.Cameo.MovieDesc" parent="TextAppearance.Cameo.Body">
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextAppearance.Cameo.Rating">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="Widget.Cameo.MovieDetail.Image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">300dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="TextAppearance.Cameo.MovieDetail.Title" parent="TextAppearance.Cameo.Display">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="TextAppearance.Cameo.MovieDetail.Paragraph" parent="TextAppearance.Cameo.Body">
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="TextAppearance.Cameo.MovieDetail.RatingLabel" parent="TextAppearance.Cameo.Caption">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Widget.Cameo.PrimaryButton" parent="Widget.Material3.Button">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>

</resources>