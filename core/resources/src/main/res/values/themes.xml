<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Cameo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 🎨 Brand Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorSecondary</item>


        <!-- 🌚 Backgrounds -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/textPrimary</item>

        <!-- 🧾 Text Colors (Custom Attrs) -->
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>

        <!-- 🔘 Buttons -->
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:colorControlHighlight">@color/colorHover</item>

        <!-- 🧱 Borders / Dividers -->
        <item name="android:strokeColor">@color/colorDivider</item>

        <!-- 🌐 System Bars -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- 🔤 Global Font -->
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="fontFamily">@font/inter_regular</item>

        <!-- Shadow overlay -->
        <item name="android:colorForeground">@color/colorShadow</item>
    </style>

    <style name="TextAppearance" />

    <style name="TextAppearance.Cameo" />

    <style name="Theme.Cameo" parent="Base.Theme.Cameo" />

    <style name="TextAppearance.Cameo.MovieTitle" parent="TextAppearance.Cameo.Subtitle">
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="TextAppearance.Cameo.Rating">
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

</resources>